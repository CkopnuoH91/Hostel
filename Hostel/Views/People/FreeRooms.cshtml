@model Dictionary<Hostel.Models.Room, int>

@{
    ViewBag.Title = "Список свободных комнат";
}



<h3>@ViewBag.Title</h3>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Keys.ToList().FirstOrDefault().Number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Keys.ToList().FirstOrDefault().Capacity)
        </th>
        <th>
            @*@Html.DisplayNameFor(model => model.Values.FirstOrDefault()) *@
            Число жильцов
        </th>
        <th>
            Свободно мест
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Key.Number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Key.Capacity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Value)
        </td>
        <td>
            @Html.Label((item.Key.Capacity - item.Value).ToString())
        </td>
    </tr>
}

</table>
<footer>@Html.ActionLink("Список жильцов", "Index", "People")|@Html.ActionLink("Список комнат", "Index", "Rooms")</footer>